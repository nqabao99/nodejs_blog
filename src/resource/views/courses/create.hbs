<div class='mt-4'>
	<h3>Đăng khoá học</h3>

	<form method='POST' action='/courses/store'>
		<div class='form-group'>
			<label for='name'>Tên khoá học</label>
			<input
				type='text'
				class='form-control'
				id='name'
				name='name'
				placeholder='Nhập tên khoá học'
			/>
		</div>
		<div class='form-group'>
			<label for='description'>Mô tả</label>
			<input
				type='text'
				class='form-control'
				id='description'
				name='description'
				placeholder='Nhập mô tả'
			/>
		</div>
		<div class='form-group'>
			<label for='videoId'>Video id</label>
			<input
				type='text'
				class='form-control'
				id='videoId'
				name='videoId'
				placeholder='Nhập video id'
			/>
		</div>

		<button type='submit' class='btn btn-primary'>Thêm khoá học</button>
	</form>
</div>